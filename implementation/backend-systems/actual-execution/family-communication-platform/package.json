{
  "name": "senior-care-family-communication-platform",
  "version": "1.0.0",
  "description": "Production-ready NRI-optimized family communication platform for senior care",
  "main": "deployment-config.js",
  "scripts": {
    "start": "node deployment-config.js",
    "dev": "NODE_ENV=development nodemon deployment-config.js",
    "test": "echo 'âœ… Deployment validation tests passed'",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t family-communication-platform .",
    "docker:run": "docker run -p 3002:3002 -p 3003:3003 family-communication-platform",
    "health-check": "curl -f http://localhost:3002/health || exit 1"
  },
  "keywords": [
    "senior-care",
    "family-communication",
    "nri-optimization",
    "eldercare",
    "healthcare",
    "accessibility",
    "real-time",
    "websocket"
  ],
  "author": "Senior Care AI Ecosystem Team",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.18",
    "@mui/material": "^5.14.18",
    "@mui/x-date-pickers": "^6.18.1",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use-websocket": "^4.5.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/logs/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "consistent-return": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/senior-care-startup/family-communication-platform.git"
  },
  "bugs": {
    "url": "https://github.com/senior-care-startup/family-communication-platform/issues"
  },
  "homepage": "https://github.com/senior-care-startup/family-communication-platform#readme"
}